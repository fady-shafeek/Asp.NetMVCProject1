@model IEnumerable<Employee>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@*anchor use Get Verb ONLY*@
@Html.ActionLink("Create New", "Create", "Employee", new { @class = "btn btn-primary" })
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>Id</th>
        <th>name</th>
        <th>Age</th>
        <th>Address</th>
        <th>Department</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Age</td>
            <td>@item.Address</td>
            <td>@item.Department.DeptName</td>
            <td>
                <a href="/employee/edit/@item.Id" class="btn btn-success">Edit</a> |
                @Html.ActionLink("Details", "Details", "Employee", new { id = item.Id, name = item.Name }, new { @class = "btn btn-secondary" }) |
                <a href="/employee/delete?id=@item.Id" class="btn btn-danger" onclick="return confirm('R u Sure Delete @item.Name !!!');">Delete</a>
            </td>
        </tr>
    }
</table>

